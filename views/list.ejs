<%-include('header')-%>
<div class="box" id="heading">
  <h1><%=listTitle%></h1>
</div>
<div class="box">
  <% newListItem.forEach(function(item){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%=item._id%>"
        onChange="this.form.submit()"
        ...
      />
      <input type="text" hidden name="listName" value="<%=listTitle%>"></input>
      <p><%=item.name%></p>
    </div>
  </form>

  <%})%>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="todo"
      placeholder="What do you want to do today"
      autocomplete="0"
    />
    <button name="list" type="submit" value="<%=listTitle%>">+</button>
  </form>
</div>

<%-include("footer")-%>
